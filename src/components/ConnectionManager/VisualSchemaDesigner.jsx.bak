  if (!tableName) return false;
  
  const adSpendTables = [
    'Community', 
    'ChallengeFree', 
    'ChallengePaid', 
    'ChallengeHybrid',
    'LowTicketAcquisition', 
    'HighTicketVSL', 
    'InstagramDM', 
    'WebinarBase', 
    'WebinarAdvance'
  ];

  return adSpendTables.includes(tableName) || /ad|spend|campaign|advert/i.test(tableName);
};

